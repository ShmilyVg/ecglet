@import "../../components/result-top/index.wxss";
@import "../../components/result-bottom/index.wxss";
page {
    background-color: transparent;
}

.title {
    font-size:38rpx;
    font-weight:500;
    color:rgba(255,255,255,1);
    line-height:53rpx;
    margin-top: 20rpx;
}

.content {
    font-size:24rpx;
    font-weight:400;
    color:rgba(255,255,255,1);
    line-height:33rpx;
    margin-top: 10rpx;
}

.cell{
    width: 650rpx;
    padding: 60rpx 50rpx;
    justify-content: space-between;
}

.cell-title{
    font-size:36rpx;
    font-family:PingFang-SC-Bold;
    font-weight:bold;
    color:rgba(51,68,78,1);
    line-height:28rpx;
}

.cell-title-tip{
    font-size:20rpx;
    font-family:PingFang-SC-Medium;
    font-weight:500;
    color:rgba(51,68,78,1);
    line-height:28rpx;
    margin-top: -7rpx;
    margin-left: 10rpx;
}

.cell-content {
    font-size:28rpx;
    font-family:PingFang-SC-Regular;
    font-weight:400;
    color:rgba(113,142,160,1);
    line-height:32rpx;
    margin-top: 26rpx;
}

.cell-num {
    font-size:70rpx;
    font-family:DINCondensed-Bold;
    font-weight:bold;
    line-height:84rpx;
    width: 100%;
    text-align: right;
}

.cell-unit {
    font-size:28rpx;
    font-family:PingFang-SC-Regular;
    font-weight:400;
    line-height:32rpx;
    margin-top: -10rpx;
    width: 100%;
    text-align: right;
}

.result-top-layout{
    height: 240rpx;
    position: relative;
    overflow: hidden;
}

.result-top-layout::after {
    content: '';
    width: 140%;
    height: 240rpx;
    position: absolute;
    z-index: -1;
    left: -20%;
    top: 0;
    border-radius: 0 0 50% 50%;
    background-color: #FF7049;
}

.line-1{
    width:750rpx;
    height:1rpx;
    background:rgba(246,247,247,1);
}

.tip-point {
    width: 10rpx;
    height: 10rpx;
    background-color: #FC7A60;
    border-radius: 50%;
    margin-top: 12rpx;
}

.tip-text {
    font-size:22rpx;
    font-family:PingFang-SC-Medium;
    font-weight:500;
    color:rgba(91,91,91,1);
    line-height:34rpx;
    margin-left: 8rpx;
    width: 622rpx;
}

.tip-push{
    width:140rpx;
    height:42rpx;
    background:rgba(255,247,245,1);
    border-radius:21rpx;
    font-size:22rpx;
    font-family:PingFang-SC-Medium;
    font-weight:500;
    color:rgba(252,122,96,1);
    line-height:42rpx;
    text-align: center;
    margin-top: 24rpx;
}

.logo {
    width: 95rpx;
    height: 95rpx;
    position: relative;
    margin-top: -75rpx;
    border-radius: 50%;
    border-width: 15rpx;
    border-style: solid;
    background-color: #FF7049;
    border-color: #FF7049;
}