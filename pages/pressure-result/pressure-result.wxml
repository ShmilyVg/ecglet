<import src="../../components/result-top/index.wxml"></import>
<import src="../../components/result-bottom/index.wxml"></import>
<view class="flex-column align-items-center" style="padding-bottom: 50rpx;">
    <!--    <view class="share">分享给亲友</view>-->
    <view class="fill-width flex-column align-items-center pressure-result-top-layout">
        <view class="fill-width flex-column align-items-center pressure-result-title-bg">
            <view class="title">心脏负荷检测结果报告</view>
            <view class="content">{{time}}</view>
        </view>
        <template is="result-top" data="{{resultColor:'#00beb4',items,isGreen:true}}"></template>
    </view>


    <view class="fill-width flex-row pressure-result-title align-items-center">
        <view class="">心脏压力指数</view>
        <view style="padding: 20rpx 20rpx;" bindtap="lookReasonDialog" class="flex-row align-items-center">
            <image style="width: 36rpx;height: 36rpx;" src="../../images/pressure-result/question.png"></image>
        </view>
    </view>

    <view class='flex-column align-items-center table-02 table-02-bg'>
        <view class="canvasBox">
            <view class='outerCircle'></view>
            <view class='coreCircle'></view>
            <canvas canvas-id="runCanvas" id="runCanvas" class='canvas'></canvas>

        </view>
        <view class="pressure-score-title">{{stress.title||''}}</view>

        <view wx:for="{{stress.content}}" wx:key="index" class="pressure-score-content">{{item}}</view>
    </view>
    <view class="fill-width flex-column pressure-result-title">
        <view>疲劳程度</view>
        <view class="pressure-result-subtitle">与人的压力和能量储备相关，反映了您当前身体的疲劳程度</view>
    </view>

    <view class='flex-column align-items-center table-02 table-02-bg'>
        <view class="flex-row align-items-center" style="position: relative;height: 96rpx;">
            <image class="level-image" src="../../images/pressure-result/pl.png"></image>
            <image class="level-status-image absolute" src="../../images/pressure-result/pl0{{tired.level}}.png" style="left: {{tired.position}}%;"></image>
        </view>
        <view class="pressure-score-content">{{tired.content}}</view>
    </view>

    <view class="fill-width flex-column pressure-result-title">
        <view>兴奋指数</view>
        <view class="pressure-result-subtitle">反映您的整体健康状况和精神状态，数值越小表示神经越放松，越大表示神经越兴奋</view>
    </view>

    <view class='flex-column align-items-center table-02 table-02-bg'>
        <view class="flex-row align-items-center" style="position: relative;height: 96rpx;">
            <image class="level-image" src="../../images/pressure-result/qx.png"></image>
            <image class="level-status-image absolute" src="../../images/pressure-result/qx0{{emotion.level}}.png" style="left: {{emotion.position}}%;"></image>
        </view>
        <view class="pressure-score-content">{{emotion.content}}</view>
    </view>

    <template is="result-bottom" data="{{isAbnormal,resultColor:'#00beb4', resultBottomRemindColor:'rgba(192,238,236,1)'}}"></template>

</view>
