<!--pages/AvgHR/AvgHR.wxml-->
<view class="flex-column align-items-center">
    <view class="decipher-title">平均心率</view>
    <view class="decipher-num">58<mark class="decipher-unit">bpm</mark></view>
    <view class="decipher-line flex-row">
        <view wx:for="{{lineColor}}" style="width: 20%;height:100%;background-color: {{item.color}}"></view>
    </view>
    <view class="decipher-text-view flex-row">
        <view wx:for="{{lineNum}}" class="decipher-text-view-text">{{item}}</view>
    </view>

    <view class="flex-row" style="flex-wrap: wrap;margin-top: 30rpx">
        <view class="flex-row align-items-center" style="margin-top: 22rpx" wx:for="{{lineColor}}">
            <view class="decipher-point" style="background-color: {{item.color}};"></view>
            <view style="color: #5B5B5B;font-size: 22rpx">{{item.text}}</view>
        </view>
    </view>
</view>

<view class="decipher-line-height-1"></view>