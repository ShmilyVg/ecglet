button{
  display: block;
  background-color: transparent;
}

button::after{
  border: none;
}
page{
  background: #fff;
}
.user-head{
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
}

.user-name{
  width:288rpx;
  font-size:32rpx;
  font-weight:400;
  color:rgba(91,91,91,1);
  white-space: nowrap;
  overflow: hidden;
  margin-left: 30rpx;
  text-overflow: ellipsis;
}

.title{
  font-size:50rpx;
  font-weight:500;
  color:rgba(0,0,0,1);
}
.start-tip{
  width:618rpx;
  font-size:30rpx;
  font-weight:500;
  color:rgba(0,0,0,1);
  margin-top: 20rpx;
  margin-bottom: 35rpx;
}
.description{
  font-size:30rpx;
  font-weight:400;
  color:rgba(159,159,159,1);
  margin-bottom: 50rpx;
}

.item-title{
  font-size:34rpx;
  font-weight:400;
  color:rgba(255,255,255,1);
  line-height:44rpx;
}
.item-subtitle{
  font-size:26rpx;
  font-family:PingFang-SC-Regular;
  font-weight:400;
  color:rgba(255,222,216,1);
  line-height:44rpx;
  align-self: flex-start;
}
.start-btn{
  width: 300rpx;
  background:rgba(58,147,239,1);
  box-shadow:-10rpx 10rpx 13rpx 0px rgba(58,147,239,0.3);
  border-radius:40rpx 0px 40rpx 40rpx;
  padding: 45rpx 56rpx 45rpx 40rpx;
  margin: 0;
}

.start-btn-02{
  width: 300rpx;
  background:rgba(252,122,96,1);
  box-shadow:-6rpx 8rpx 20rpx 0 rgba(252,122,96,0.4);
  border-radius:40rpx 0px 40rpx 40rpx;
  padding: 45rpx 56rpx 45rpx 40rpx;
  margin: 0;
}
.start-icon{
  width: 58rpx;
  height: 50rpx;
}
.start-arrow-icon{
  width: 44rpx;
  height: 35rpx;
}

.icon-margin-top{
  margin-top: 75rpx;
}

.line-little{
  width:70rpx;
  height:6rpx;
  background:rgba(231,231,231,1);
  border-radius:3rpx;
  margin-top: 12rpx;
  margin-bottom: 20rpx;
}
.heart-health-layout{
  width:649rpx;
  height:105rpx;
  background:rgba(243,241,255,1);
  border-radius:40rpx;
  margin-top: 50rpx;
  margin-bottom: 100rpx;
  padding: 38rpx 42rpx 38rpx 46rpx;
}

.heart-health-title{
  font-size:30rpx;
  font-family:PingFang-SC-Medium;
  font-weight:500;
  color:rgba(114,101,227,1);
  line-height:64rpx;
}
