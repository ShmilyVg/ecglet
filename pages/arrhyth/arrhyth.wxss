/*圆环进度条文字*/
.container{
  /*//background-color: black;*/
  position: relative;
}
.circle_info {
  position: absolute;
  width: 100%;
  left: 50%;
  top: 50%;
  transform: translate(-50%,-50%);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.circle_dot {
  font-size:30rpx;
  font-weight:bold;
  color:rgba(255,255,255,1);
  opacity:0.67;
  line-height: 30rpx;
}
.circle_txt {
  font-size:120rpx;
  font-weight:400;
  color:rgba(255,255,255,1);
  line-height: 87rpx;
  margin-top: 10rpx;
  margin-bottom: 15rpx;
}

.circle_pannel{
  /*flex-grow: 1;*/
