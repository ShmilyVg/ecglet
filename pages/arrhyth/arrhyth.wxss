}

.content-layout{
  height: 350rpx;
  margin-bottom: 20rpx;
  margin-top: 20rpx;
}

.ecg_pannel {
  flex-grow: 1;
  width: 100%;
  height: 100%;
  align-self: stretch;
}
.toast {
  margin-top: 41rpx;
}
.toast .tip {
  color: white;
  font-size: 26rpx;
}

.remind-image-size{
  width:18rpx;
  height:18rpx;
  margin-right: 10rpx;
}
.remind-text-big{
  font-size:50rpx;
