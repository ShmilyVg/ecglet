@import "view/history-list.wxss";
@import "view/history-trend.wxss";
@import "view/view/trend-index.wxss";

page {
    background: #f2f2f2;
}

.top-view {
    width: 670rpx;
    background-color: white;
    padding: 50rpx 40rpx 30rpx;
    justify-content: space-between;
}

.avatar{
    height: 80rpx;
    width: 80rpx;
    border-radius: 50%;
}

.name{
    color: #5B5B5B;
    margin-left: 20rpx;
}

.right-nice-choose{
    width:186rpx;
    height:64rpx;
    background:rgba(255,255,255,1);
    border:1rpx solid rgba(226,230,233,1);
    border-radius:32rpx;
    align-items: center;
}

.right-nice-choose-item-chose {
    width:84rpx;
    height:44rpx;
    border-radius:22rpx;
    font-size:24rpx;
    font-weight:400;
    color:rgba(255,255,255,1);
    text-align: center;
    line-height: 44rpx;
    background-color: var(--primaryColor);
}

.right-nice-choose-item {
    width:53rpx;
    height:44rpx;
    font-size:24rpx;
    font-weight:400;
    color:var(--primaryColor);
    text-align: right;
    line-height: 44rpx;
}

.switch{
    width: 28rpx;
    height: 28rpx;
    position: absolute;
    top: 95rpx;
    left: 90rpx;
    border-radius: 50%;
    border:7rpx solid white;
}

.bottom-view{
    width: 100%;
    height:116rpx;
    background-color: #EAE6FF;
    position: relative;
    bottom: 0;
    align-items: center;
    justify-content: space-around;
}

.bottom-view-text{
    font-size:26rpx;
    font-weight:400;
    color:#7165E3;
    line-height:36rpx;
}

.bottom-view-btn{
    width:158rpx;
    height:58rpx;
    background:#8074ED;
    box-shadow:0px 6px 10px 0px rgba(128,116,237,0.2);
    border-radius:29rpx;
    font-size:24rpx;
    font-weight:400;
    color:rgba(255,255,255,1);
    line-height: 58rpx;
    text-align: center;
    margin-right: 30rpx;
}

.bottom-view-close{
    width:44rpx;
    height:44rpx;
    border:4rpx solid #EAE6FF;
    background:rgba(234,230,255,1);
    box-shadow:0px -1px 0px 0px rgba(234,230,255,0.76);
    border-radius:50%;
}
