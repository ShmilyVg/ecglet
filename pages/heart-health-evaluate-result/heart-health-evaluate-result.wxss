.health-evaluate-line{
    width:100%;
    height:20rpx;
    background:rgba(246,247,249,1);
    margin-top: 50rpx;
}

.health-evaluate-item{
    padding: 68rpx 80rpx 30rpx 40rpx;
}

.health-evaluate-index{
    width:36rpx;
    height:36rpx;
    background:rgba(77,97,109,1);
    border-radius:50%;
    font-size:24rpx;
    font-family:PingFang-SC-Medium;
    font-weight:500;
    color:rgba(255,255,255,1);
    line-height:28rpx;
    margin-right: 14rpx;
}

.health-evaluate-title{
    font-size:36rpx;
    font-family:PingFang-SC-Medium;
    font-weight:500;
    color:rgba(51,68,78,1);
    line-height:28rpx;
    margin-top: 5rpx;
}

.health-evaluate-content{
    width: 580rpx;
    font-size:22rpx;
    font-family:PingFang-SC-Regular;
    font-weight:400;
    color:rgba(156,156,156,1);
    line-height:30rpx;
    margin-top: 33rpx;
}
.heart-health-placeholder{
    font-size:30rpx;
    font-family:PingFang-SC-Medium;
    font-weight:500;
    color:rgba(204,204,204,1);
    line-height:28rpx;
}

.heart-health-unit{
    font-size:30rpx;
    font-family:PingFang-SC-Medium;
    font-weight:500;
    color:rgba(51,51,51,1);
    line-height:28rpx;
}

.health-evaluate-radio-button{
    padding: 18rpx 53rpx;
    border-radius:30rpx;
    font-size:28rpx;
    font-family:PingFang-SC-Regular;
    font-weight:400;
    line-height:28rpx;
    margin-right: 30rpx;
}
.health-evaluate-radio-unselected{
    background:rgba(246,247,247,1);
    color:rgba(96,119,139,1);
}
.health-evaluate-radio-selected{
    background:rgba(114,101,227,1);
    color:rgba(255,255,255,1);
}

.button-bottom-view{
    background-color: var(--primaryColor);
}
.heart-health-input{
    color:rgba(51,68,78,1);
}
