<import src="../../components/result-bottom/index.wxml"></import>
<view class="flex-column align-items-center {{isGreen?'page-green':'page-blue'}}">
    <image wx:if="{{isGreen}}" src="../../images/result/bg_green.png" style="height: 273rpx;width: 100%"></image>
    <image wx:else src="../../images/result/bg_blue.png" style="height: 273rpx;width: 100%"></image>
<!--    <view class="share">分享给亲友</view>-->
    <view class="avatar-border flex-column align-items-center {{isGreen?'avatar-border-green':'avatar-border-blue'}}">
        <image class="avatar" src="{{userInfo.portraitUrl}}"></image>
    </view>
    <view class="title">心电智能分析报告</view>
    <view class="content">{{result.time}}</view>
    <image  wx:if="{{isGreen}}" src="../../images/result/logo_green.png" class="logo"></image>
    <image  wx:else src="../../images/result/logo_blue.png" class="logo"></image>

    <view class="table">
        <block wx:for="{{result.info}}" wx:key="index">
            <view class="cell flex-row">
                <view class="flex-row">
                    <view class="point-comm {{item.status===0?'point-red':(isGreen?'point-green':'point-blue')}}"></view>
                    <view class="flex-column align-items-center" style="align-items: flex-start">
                        <view class="cell-title">{{item.name}}</view>
                        <view class="cell-state {{item.status===0?'cell-red':(isGreen?'cell-green':'cell-blue')}}">{{item.status===0?'异常':'正常'}}</view>
                    </view>
                </view>
                <view class="flex-column align-items-center" style="align-items: flex-end">
                    <view class="cell-num {{item.status===0?'cell-red':(isGreen?'cell-green':'cell-blue')}}">{{item.time}}</view>
                    <view class="cell-eng">{{item.unit}}</view>
                </view>
            </view>
        </block>
    </view>

    <template is="result-bottom" data="{{resultColor:'#3A93EF'}}"></template>
</view>
