
<view>
    <view class="header">
        <view class="heart-bg"><image src="../../images/start/bg.png" alt=""/></view>
        <view class="heart-box">
            <view class="header-p1">欢迎使用HiPee心电仪</view>
            <view class="header-p2">{{nameShow}}</view>
        </view>
    </view>
    <view class="flex-column align-items-center justify-center main">
        <image wx:if="{{userPic}}" class="main-pic" src="{{userPic}}"></image>
        <image wx:else class="main-pic" src="../../images/user.png"></image>
        <button wx:if="{{haveAuthorize}}" class="main-heart" bindtap="toTestPage" hover-class="none">
            开始
            <image class="startbtnbg" src="../../images/start/startbtnbg.png"></image>
        </button>
        <button wx:elif="{{isConnected}}" class="main-heart" open-type="getUserInfo" bindgetuserinfo="onGotUserInfo" hover-class="none">
            开始
            <image class="startbtnbg" src="../../images/start/startbtnbg.png"></image>
        </button>
        <button wx:else class="main-heart" hover-class="none" bindtap="onNoNetworkConnected">
            开始
            <image class="startbtnbg" src="../../images/start/startbtnbg.png"></image>
        </button>
        <view class="main-hint">点击按钮进入测试</view>
    </view>
</view>
