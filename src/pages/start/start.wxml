
<view>
    <view class="header">
        <view class="heart-bg"><image src="../../images/start/bg.png" alt=""/></view>
        <view class="heart-box">
            <view class="header-p1">欢迎使用HiPee心电仪</view>
            <view class="header-p2">{{nameShow}}</view>
        </view>
    </view>
    <view class="main">
        <image wx:if="{{userPic}}" class="main-pic" src="{{userPic}}"></image>
        <image wx:else class="main-pic" src="../../images/start/user.png"></image>
        <button class="main-heart" open-type="getUserInfo" bindgetuserinfo="onGotUserInfo" hover-class="none">
            <image class="main-heart-bg" src="../../images/start/startbtnbg.png" alt=""/>
            <view class="main-heart-btn">开始</view>
        </button>

        <view class="main-hint">点击按钮进入测试</view>
    </view>
</view>
