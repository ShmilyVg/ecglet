<block wx:if="{{haveNum}}">
    <view class="page flex-column" xmlns:wx="http://www.w3.org/1999/xhtml">
        <image class="top-image" src="../../images/mine/jingcejilu_beijing.png"></image>
        <view class="top-cell flex-row">
            <view class="avatar-view flex-row">
                <image src="{{userInfo.portraitUrl}}" class="avatar"></image>
            </view>
            <view class="name">{{userInfo.nickName}}</view>
            <view wx:if="{{haveAuthorize}}" class="edit-info" bindtap="toEditInfo">编辑资料</view>
            <button wx:else class="edit-info" open-type="getUserInfo" bindgetuserinfo="onGotUserInfo">授权</button>
        </view>
        <view class="table">
            <view class="flex-row cell" bindtap="clickCell1">
                <image class="icon" src="../../images/mine/jingcejilu.png"></image>
                <view class="title">检测记录</view>
                <image src="../../images/mine/arr.png" class="arr"></image>
            </view>
            <view class="flex-row cell" bindtap="clickCell2">
                <image class="icon" src="../../images/mine/xinzhangjibingjieshou.png"></image>
                <view class="title">心脏疾病介绍</view>
                <image src="../../images/mine/arr.png" class="arr"></image>
            </view>
        </view>
        <view class="table">
            <view class="flex-row cell" bindtap="clickCell3">
                <image class="icon" src="../../images/mine/fangkui.png"></image>
                <view class="title">反馈</view>
                <image src="../../images/mine/arr.png" class="arr"></image>
            </view>
        </view>
    </view>
</block>

<view class="flex-column" wx:else>
    <image style="width: 422rpx;height: 370rpx;margin-top: 184rpx" src="../../images/mine/shouquangdenglu.png"></image>
    <view style="font-size: 50rpx;color: #333333;">微信授权</view>
    <text style="text-align: center;font-size: 26rpx;color: #999999">HiPee心电仪需要获取您的手机号登录注册\n登录后可以使用更多专业服务</text>
    <button class="btn" open-type="getPhoneNumber" bindgetphonenumber="getPhoneNumber">授权</button>
</view>