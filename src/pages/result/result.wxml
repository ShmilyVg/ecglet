<view class="flex-column">
    <image src="../../images/result/bg.png" style="height: 270rpx;width: 100%"></image>
    <view class="avatar-border flex-column">
        <view class="avatar"></view>
    </view>
    <view class="title">心电智能分析报告</view>
    <view class="content">{{result.time}}</view>
    <image src="../../images/result/logo.png" class="logo"></image>

    <view class="table">
        <block wx:for="{{result.info}}" wx:key="index">
            <view class="cell flex-row">
                <view class="flex-row">
                    <view class="point-comm {{item.status===0?'point-red':'point-blue'}}"></view>
                    <view class="flex-column" style="align-items: flex-start">
                        <view class="cell-title">{{item.name}}</view>
                        <view class="cell-state {{item.status===0?'cell-red':'cell-blue'}}">{{item.status===0?'异常':'正常'}}</view>
                    </view>
                </view>
                <view class="flex-column" style="align-items: flex-end">
                    <view class="cell-num {{item.status===0?'cell-red':'cell-blue'}}">{{item.time}}</view>
                    <view class="cell-eng">{{item.unit}}</view>
                </view>
            </view>
            <view class="line"></view>
        </block>
        <view class="cell-bottom-view" bindtap="lookDetail">查看详细报告</view>
    </view>
    <image src="../../images/result/logo-ch.png" style="width: 114rpx;height: 67rpx;margin-top: 50rpx"></image>
    <view class="bottom-text"><text>上海交通大学医学附属仁济医院远程\n心电诊断中心</text></view>
</view>
